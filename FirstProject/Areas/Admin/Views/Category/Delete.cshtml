@model Category

<div class="container mt-5" style="max-width: 600px;">
    <div class="border rounded p-4 shadow-sm bg-white">
        <h4 class="text-danger mb-3">Confirm Category Deletion</h4>
        <p class="text-muted">Are you sure you want to delete this category? This action cannot be undone.</p>

        <div class="mt-4">
            <h5 class="mb-2">@Model.Name</h5>
            <p class="mb-1 text-muted"><strong>Display Order:</strong> @Model.DisplayOrder</p>
            <p class="mb-1 text-muted"><strong>Category ID:</strong> @Model.Id</p>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
