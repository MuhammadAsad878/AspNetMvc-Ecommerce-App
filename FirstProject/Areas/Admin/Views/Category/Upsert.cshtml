@model Category

@{
    ViewData["Title"] = (Model == null ? "New " : "Update") + " Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 bg-light-subtle">
                <div class="card-header bg-warning-subtle text-dark d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-tags-fill me-2 text-warning"></i> @(Model == null ? "New" : "Update") Category
                    </h5>
                    <form asp-controller="Category" asp-action="Index" >
                        <button class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back
                        </button>                        
                    </form>
                </div>

                <form asp-controller="Category" asp-action="Upsert" method="post" class="p-4">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    @if(Model != null && Model.Id > 0)
                    {
                        <input asp-for="Id" hidden/>
                    }


                    <!-- Category Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="Name" class="form-control border border-secondary-subtle shadow-sm" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Display Order -->
                    <div class="mb-4">
                        <label asp-for="DisplayOrder" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="DisplayOrder" class="form-control border border-secondary-subtle shadow-sm" placeholder="Display order number" />
                        <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning text-dark fw-semibold">
                            <i class="bi bi-plus-circle me-1"></i>  @(Model == null ? "New " : "Update") Category 
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
